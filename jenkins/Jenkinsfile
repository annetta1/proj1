node {    
    def app  
   
    stage('Clone repository') {                   
        git branch: 'main', credentialsId: 'id_rsa_git', url: 'git@github.com:annetta1/proj1.git'   
      }   
        
    stage('Build image') {         		       
        app = docker.build("annetta/site_test")    
       }  
         
    stage('Test image') {                       
        app.inside {            
            sh 'echo "Tests passed"'        
            }    
        }            
    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'id_rsa_git')
        {                   
             pp.push("${env.BUILD_NUMBER}")            
             app.push("latest")        
              }    
           }
        }
    stage('Deploy') {                       
        app.inside {            
            sh 'echo "Tests passed"'        
            }    
        } 
